<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/imgQuiz"
        android:layout_width="232dp"
        android:layout_height="211dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Quiz"
        android:src="@drawable/quiz" />

    <ImageView
        android:id="@+id/imgLocalisation"
        android:layout_width="252dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Localisation"
        android:src="@drawable/localisation" />

    <ImageView
        android:id="@+id/imgRobot"
        android:layout_width="311dp"
        android:layout_height="226dp"
        android:contentDescription="Robot"
        android:src="@drawable/chatbot" />
</LinearLayout>

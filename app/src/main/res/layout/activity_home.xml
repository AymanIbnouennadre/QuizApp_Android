<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/imgQuiz"
        android:layout_width="222dp"
        android:layout_height="168dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Quiz"
        android:src="@drawable/quiz" />

    <ImageView
        android:id="@+id/imgLocalisation"
        android:layout_width="252dp"
        android:layout_height="170dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Localisation"
        android:src="@drawable/localisation" />

    <ImageView
        android:id="@+id/imgRobot"
        android:layout_width="311dp"
        android:layout_height="200dp"
        android:contentDescription="Robot"
        android:src="@drawable/chatbot" />

    <!-- ✅ Espace vide pour pousser le bouton vers le bas -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:backgroundTint="#FF6B6B"
        android:text="Se Déconnecter"
        android:textColor="@android:color/white" />
</LinearLayout>
